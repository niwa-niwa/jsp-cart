<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaeehttp://xmlns.jcp.org/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
 
 
<servlet>
	<servlet-name>cart.index</servlet-name>
	<servlet-class>cart.Index</servlet-class>
</servlet>

<servlet>
	<servlet-name>cart.add</servlet-name>
	<servlet-class>cart.AddCart</servlet-class>
</servlet>

<servlet>
	<servlet-name>cart.clear</servlet-name>
	<servlet-class>cart.CartClear</servlet-class>
</servlet>

<servlet>
	<servlet-name>cart.counter</servlet-name>
	<servlet-class>cart.Counter</servlet-class>
</servlet>

<servlet>
	<servlet-name>cart.buy</servlet-name>
	<servlet-class>cart.Purchase</servlet-class>
</servlet>


<servlet-mapping>
	<servlet-name>cart.index</servlet-name>
	<url-pattern>/index</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>cart.add</servlet-name>
	<url-pattern>/add</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>cart.clear</servlet-name>
	<url-pattern>/clear</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>cart.counter</servlet-name>
	<url-pattern>/counter</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>cart.buy</servlet-name>
	<url-pattern>/buy</url-pattern>
</servlet-mapping>


</web-app>
